<?xml version="1.0" encoding="utf-8"?>
<FrameLayout android:id="@+id/pack_list_indicator_layout"
    android:layout_width="match_parent"
    android:layout_height="40dp"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white">

        <TextView
            android:id="@+id/rect_indicator_tv_left"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="待上课程"
            android:textColor="#45b7ff"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/rect_indicator_tv_right"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="结束课程"
            android:textColor="#666666"
            android:textSize="12sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#45b7ff" />

    <View
        android:id="@+id/rect_indicator_indicator"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="#45b7ff"/>
</FrameLayout>