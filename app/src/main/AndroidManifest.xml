<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hui.devframe">

    <uses-permission android:name="android.permission.INTERNET" />

    // 蓝牙
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name=".base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".entry.FragmentLearnActivity" />
        <activity android:name=".entry.PagerLearnActivity" />
        <activity android:name=".entry.MatrixLearnActivity" />
        <activity android:name=".veex.VeexActivity" />
        <activity android:name=".DrawActivity"
            android:hardwareAccelerated="false" />
        <activity android:name=".MyDrawActivity" />
        <activity android:name=".TestDetectorActivity" />
        <activity android:name=".TestSwipeRefreshActivity" />
        <activity android:name=".NewDrawActivity" />
        <activity android:name=".entry.ScrollLearnActivity" />
        <activity android:name=".Xfermodes">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>
</manifest>