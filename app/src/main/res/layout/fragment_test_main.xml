<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.hui.devframe.fragment.LearnMainFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="this is fragment main." />

    <Button
        android:id="@+id/main_button_one"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示fragment one" />

    <Button
        android:id="@+id/main_button_two"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="显示fragment two" />

    <FrameLayout
        android:id="@+id/main_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
</LinearLayout>
