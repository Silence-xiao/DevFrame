<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:auto="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="hui.devframe.entry.PagerLearnActivity">

    <android.support.v4.view.ViewPager
        android:id="@+id/init_pager"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <Button
        android:id="@+id/pager_add_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="增加一页" />

    <Button
        android:id="@+id/pager_update_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/pager_add_btn"
        android:text="更新当前页" />

    <TextView
        android:id="@+id/pager_indicator_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        tools:text="1/10" />
</RelativeLayout>
