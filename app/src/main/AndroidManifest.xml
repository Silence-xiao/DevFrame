<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hui.devframe">

    <uses-permission android:name="android.permission.INTERNET" />

    // 蓝牙
    <uses-permission android:name="android.permission.BLUETOOTH" />
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN" />

    <application
        android:name="com.hui.devframe.base.BaseApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.hui.devframe.activity.InitActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.hui.devframe.activity.fragment.FragmentLearnActivity" />
        <activity android:name="com.hui.devframe.activity.entry.PagerLearnActivity" />
        <activity android:name="com.hui.devframe.activity.entry.MatrixLearnActivity" />
        <activity android:name="com.hui.devframe.activity.draw.MyDrawActivity" />
        <activity android:name="com.hui.devframe.activity.learn.TestDetectorActivity" />
        <activity android:name="com.hui.devframe.activity.learn.TestSwipeRefreshActivity" />
        <activity android:name="com.hui.devframe.activity.draw.NewDrawActivity" />
        <activity android:name="com.hui.devframe.activity.entry.ScrollLearnActivity" />
        <activity android:name="com.hui.devframe.activity.learn.XfermodesActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.SAMPLE_CODE" />
            </intent-filter>
        </activity>
    </application>
</manifest>